h1 = t('.heading')
p = raw t('.dear', name: @order.renter.full_name)
p = t('.thanks')
table style="border-collapse: collapse"
  tr
    th = t('.uid')
    th = t('.vehicle_name')
    th = t('.start_date')
    th = t('.end_date')
    th = t('.rental_times')
    th = t('.amount')
    th = t('.payment_kind')
  tr
    td = @order.uid
    td = @order.vehicle.name
    td = l(@order.start_date)
    td = l(@order.end_date)
    td = @order.rental_times
    td = @order.amount
    td = t(".#{@order.payment_kind}")
p = t('.confirm_message')
= link_to t('.confirm'), checkout_confirmation_url(uid: @order.uid, token: @order.confirmation_token)
